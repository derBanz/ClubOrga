<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="membership-0-0" author="sebanzian">
        <preConditions onFail="MARK_RAN">
            <not>
            <tableExists tableName="db_membership"/>
            </not>
        </preConditions>

        <createTable tableName="db_membership">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="version" type="INTEGER">
                <constraints nullable="false" primaryKey="false"/>
            </column>
            <column name="creation" type="TIMESTAMP"/>
            <column name="creationuser" type="VARCHAR(255)"/>
            <column name="lastupdate" type="TIMESTAMP"/>
            <column name="lastupdateuser" type="VARCHAR(255)"/>

            <column name="validfrom" type="TIMESTAMP">
                <constraints nullable="false" primaryKey="false"/>
            </column>
            <column name="validto" type="TIMESTAMP"/>
            <column name="discount" type="boolean">
                <constraints nullable="false" primaryKey="false"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="false"/>
            </column>
            <column name="person_id" type="UUID">
                <constraints nullable="false" primaryKey="false"/>
            </column>
            <column name="application_id" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="membership-0-1" author="sebanzian">
        <preConditions onFail="CONTINUE">
          <tableExists tableName="db_person"/>
        </preConditions>

        <addForeignKeyConstraint baseColumnNames="person_id" baseTableName="db_membership"
                                 constraintName="fk_person" referencedColumnNames="id"
                                 referencedTableName="db_person"/>
    </changeSet>
    <changeSet id="membership-0-2" author="sebanzian">
        <preConditions onFail="CONTINUE">
          <tableExists tableName="db_application"/>
        </preConditions>

        <addForeignKeyConstraint baseColumnNames="application_id" baseTableName="db_membership"
                                 constraintName="fk_application" referencedColumnNames="id"
                                 referencedTableName="db_application"/>
    </changeSet>
</databaseChangeLog>